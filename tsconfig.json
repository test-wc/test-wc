{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./src",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    // "types": [
    //   "mocha"
    // ]
  },
  "include": [
    "src/**/*.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "src/**/*.stories.ts"
  ]
}